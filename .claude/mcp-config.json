{
  "$schema": "https://github.com/anthropics/claude-code/blob/main/mcp-config-schema.json",
  "mcpServers": {
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${POSTGRES_CONNECTION_STRING}"
      },
      "description": "PostgreSQL MCP server for testing generated schemas"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "env": {
        "ALLOWED_DIRECTORIES": "${ALLOWED_DIRECTORIES}"
      },
      "description": "Enhanced file system operations"
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "description": "Advanced Git repository operations and analysis"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub API for issues, PRs, and releases"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent context across Claude Code sessions"
    }
  },
  "globalShortcuts": {
    "testParser": "/test-parser",
    "validate": "/validate-dsl",
    "coverage": "/coverage"
  }
}
