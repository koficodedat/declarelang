{
  "name": "declarelang",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Type-safe DSL for generating CRUD backends with PostgreSQL, Drizzle, and Fastify",
  "keywords": [
    "dsl",
    "crud",
    "backend",
    "code-generation",
    "typescript",
    "drizzle",
    "fastify"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/koficodedat/declarelang.git"
  },
  "bugs": {
    "url": "https://github.com/koficodedat/declarelang/issues"
  },
  "homepage": "https://github.com/koficodedat/declarelang#readme",
  "author": "Kofi Nedjoh <koficodedat@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "dev": "pnpm --parallel --filter './packages/*' dev",
    "build": "turbo run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "turbo run typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.37.0",
    "@types/node": "^22.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "turbo": "^2.1.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.45.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.3",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=0 --no-warn-ignored",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
